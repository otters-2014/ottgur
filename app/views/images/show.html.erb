<!-- Image(id: integer, filename: string, thumb_filename: string, user_id: integer, caption: text, created_at: datetime, updated_at: datetime, submission: string) -->

<p><img src="<%= @image.submission %>"></p>
<%= form_for([@image, @image.comments.build]) do |f| %>
  <%= f.text_field :text, :placeholder => "comment here!" %>
  <%= f.submit "add comment" %>
<% end %>
<% if current_user %>
  <%= link_to 'Favorite', "#{user_favorites_path(current_user)}/#{params[:id]}" %>
<% end %>
<%= params %>
<% @comments.each do |comment| %>
  <p><%= comment.text %></p>
  <p><%= comment.user.email %></p>
<% end %>
